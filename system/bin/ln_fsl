#!/bin/bash

# ln_fsl
# Authors: Matt Allbright
# Designed to streamline the process of deploying new
# and updated scripts in the SCAN Lab by creating symlinks.

bin=`ls /opt/cloud/staging/fsl/bin/`
binarr=( $bin )
lib=`ls /opt/cloud/staging/fsl/lib/`
libarr=( $lib )

for i in "${binarr[@]}"; do
  rm -rf /usr/share/fsl/5.0/bin/$i
  echo "Symlinking $i"
  ln -s /opt/cloud/staging/fsl/bin/$i /usr/share/fsl/5.0/bin/$i
done

for j in "${libarr[@]}"; do
  rm -rf /usr/share/fsl/5.0/bin/$j
  echo "Symlinking $j"
  ln -s /opt/cloud/staging/fsl/bin/$j /usr/share/fsl/5.0/bin/$j
done
