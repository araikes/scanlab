#!/bin/bash
# mirrormode
# Matt Allbright
# mirrormode runs a command or programing on all nodes in the cluster

host=`hostname`

if [ $# -lt 1 ]; then
    echo "usage: $name command"
    echo "  command          Command to be run on all nodes"
    exit 1
fi

ssh root@hope "$@"
ssh root@empire "$@"
ssh root@jedi "$@"
ssh root@norman "$@"
ssh root@rufus "$@"
ssh root@wilbur "$@"
ssh root@hyperion "$@"
